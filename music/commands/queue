const { queues } = require("../music/player");

module.exports = {
  name: "queue",
  execute(client, msg) {
    const queue = queues.get(msg.guild.id);
    if (!queue || !queue.songs.length)
      return msg.reply("âŒ Fila vazia.");

    const list = queue.songs
      .map((s, i) => `${i === 0 ? "â–¶ï¸" : `${i}.`} ${s.title}`)
      .join("\n");

    msg.channel.send(`ğŸµ **Fila:**\n${list}`);
  }
};
